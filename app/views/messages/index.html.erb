<div class="panel panel-default">
  <div class="panel-heading panel1">
    メッセージ一覧
  </div>
<!-- - - - - - - - - - - - - - - - メッセージ履歴表示部- - - - - - - - - - - - - -->    
  <div class="panel-body panel1">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<!-- - - - - - - - - - - - - - - - エラーメッセージ表示部　始- - - - - - - - - - - - - -->
<%#= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
        <li><%= full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%# end %>
<!-- - - - - - - - - - - - - - - - エラーメッセージ表示部　終- - - - - - - - - - - - - -->


<!-- - - - - - - - - - - - - - - - 入力フォーム部- - - - - - - - - - - - - -->
<%= form_for(Message.new, html: {class: "form-horizontal"}) do |f| %>



  <div class="form-group">
    <label for="message_name" class="col-sm-1 control-label">名前</label>
    <div class="col-sm-4">
        <%= f.text_field :name, class: "form-control form1" %>
    </div>
    <div class="col-sm-7"></div>
  </div>
  
  <div class="form-group">
    <label for="message_body" class="col-sm-1 control-label">内容</label>
    <div class="col-sm-4">
        <%= f.text_area :body, class: "form-control form2" %>
    </div>
    <div class="col-sm-7"></div>
  </div>

  <div class="form-group">
    <div class="col-sm-1"></div>
    <div class="col-sm-4">
      <%= f.submit class: "btn btn-lg btn-primary"  %>
    </div>
    <div class="col-sm-7"></div>
  </div>
  
<% end %>