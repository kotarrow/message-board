<div class="panel panel-default">
  <div class="panel-heading panel1">
    メッセージ一覧
  </div>
<!-- - - - - - - - - - - - - - - - メッセージ履歴表示部　始- - - - - - - - - - - - - -->    
  
  <div class="panel-body panel1">
  <div class="form-group">
    <% @messages.each do |message| %>
      
      <div class="col-sm-3 control-label">
      <span class="label label-info"><%= message.name %></span>
      <span class="label label-success">Age:<%= message.age %></span>
      </div>
      
      <div class="col-sm-6 control-label">
      <%= message.body %>
      </div>
<!-- - - - - - - - - - - - - - - - メッセージ編集- - - - - - - - - - - - - -->   
      <span style="color: white" class="col-sm-3 control-label">
        <span class="label label-danger">
          <%= link_to "edit" , edit_message_path(message), :class => "edit_button" %>
        </span>
        &nbsp;
<!-- - - - - - - - - - - - - - - - メッセージ削除- - - - - - - - - - - - - -->
        <span class="label label-danger edit_button">
          <%= link_to "destroy" , message , method: :delete, :class => "edit_button",
          data: {confirm: '削除してもよろしいですか？'} %>
        </span>
      </span>
      <br>
    <% end %>
  </div>
  </div>
  <!-- - - - - - - - - - - - - - - - メッセージ履歴表示部　終- - - - - - - - - - - - - -->  
</div>

